{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "checkJs": true,
        "strict": true,
        "alwaysStrict": true,
        "noImplicitAny": false,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "typeAcquisition": {
        "enable": true
    }
}